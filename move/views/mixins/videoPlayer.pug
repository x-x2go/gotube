mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src, autoplay)
        .videoPlayer__controls#jsPlayerControls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-pause
            .videoPlayer__column
                progress#progressBar(max="100", value="0")
                span
                    span#currentTime 00:00:00 
                    |/ 
                    span#totalTime 00:00:00 
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-down
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
                span#jsFullScreen
                    i.fas.fa-expand