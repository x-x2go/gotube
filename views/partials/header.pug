header.header
    .header__wrapper
        .header__column
            form#jsSearchForm.blind(action=routes.search, method="get")
                input(type="text", placeholder="Search by term...", name="term")
            button#jsSearch
                i.fas.fa-search
          
        .header__column
            a(href=routes.home)
                img(src="assets/img/logo_small.png", alt="gotube logo")
                
        .header__column
            ul
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Log In
                else
                    li
                        a(href=`/videos${routes.upload}`) Upload
                    li
                        a(href=routes.me) Profile
                    li
                        a(href=routes.logout) Log Out