            img.u-avatar(src=user.avatarUrl)
            h4.profile__username=user.name
        if loggedUser&&user.id ===loggedUser.id
            .user-profile__btns
                a(href=`/users${routes.editProfile}`)
                    button.waveBtn üñç Edit Profile
                        span.wave
                        span.wave
                        span.wave
                        span.wave
                a(href=`/users${routes.changePassword}`)
                    button.waveBtn üîí Change Password
                        span.wave
                        span.wave
                        span.wave
                        span.wave
        .user-videos
            h5 #{user.name} 
            |'s videos
            .home-videos
                each item in user.videos
                    +videoBlock({
                        id: item.id,
                        thumbnail: item.thumbnail,
                        title: item.title,
                        views: item.views,
                        videoFile: item.fileUrl
                    })